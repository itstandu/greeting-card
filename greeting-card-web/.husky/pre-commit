#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Disable exit on error to handle prettier check failure
set +e

# Run Prettier check and capture exit code (suppress output to avoid confusion)
npx prettier --check . > /dev/null 2>&1
PRETTIER_EXIT_CODE=$?

# Re-enable exit on error
set -e

# If the check fails, run the format and add the changes
if [ $PRETTIER_EXIT_CODE -ne 0 ]; then
  echo "Code formatting issues detected. Formatting code with Prettier..."
  npx prettier --write .

  # Add all modified and untracked files that were formatted
  # This includes files already in staging and newly formatted files
  git add -u
  git add . 2>/dev/null || true

  echo "Code has been formatted and staged. Proceeding with commit..."
fi

# Always exit with success to allow commit to proceed
exit 0

